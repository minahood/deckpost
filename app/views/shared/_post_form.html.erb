
<div class="form_bg d-none"></div>
<div class="post_form d-none">
  <div class= "post_form_main border">
    <%= form_with(model: @micropost, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="text-secondary form">
        <%= f.label :title, "デッキ名" %>
        <%= f.text_field :title,class: "form-control", placeholder: "デッキ名を入力..." %>
          
      
        <%= f.label :content, "解説"%>
        <%= f.text_area :content, placeholder: "解説...",id: "textarea",class: "form-control js-textarea_count mb-0" %>
        
        <p class="float-none ml-auto mt-0 wid_85">
          <span class="js-textarea_counter"></span>
        </p>
        
        <%= render 'shared/deck_kind' ,{f: f,search_kind: current_user.favorite} %>
        
       
        <%= render 'shared/deck_intention' ,{f: f,search_intention: nil} %>
      </div>
    
      <div class="mb-2">
        <%= f.label :image,class: "btn btn-sm image_select_btn" do %>
          <i class="far fa-image mr-1"></i>画像を選択
        <% end %>
        <%= f.file_field :image,class:"d-none",accept: "image/jpeg,image/png,image/bmp",onchange: "previewFile()" %>
        <small class="text-secondary"> 1枚のみ。画像の編集・合成：<%= link_to "こちら","https://www.peko-step.com/tool/combine-images.html",target: "_blank" %></small>
        <img src="" class="post_image rounded border" alt=""> <!-- プレビューの表示枠を用意 -->  
      
      </div>
  
      <div>
        <%= f.submit "投稿する",id: "p_form_btn",  class: "btn btn-sm btn-primary float-right",disabled: false %>  
      </div>
      <br style="clear:both;"/>
    <% end %>
  </div>
</div>

<%= render 'shared/post_js' %>
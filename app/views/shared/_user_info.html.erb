<section class="user_info mt-1 pb-0">
  <%= link_to "ユーザー設定", edit_user_path(@user),class: "btn btn-sm btn-outline-primary float-right mt-2" if current_user?(@user)%>
  <% if !current_user?(@user) %>
    <section class="mt-2 pt-0 float-right">
      <%= render 'follow_form' if logged_in? %>
    </section>
  <% end %>
  <h5 class="m-0"><%= @user.name %></h5>
  
  <span class="text-secondary"><%= @user.login_id %></span>
  
  <div class="mt-2">
    <small>
      <%= simple_format(@user.introduction) if @user.introduction!=nil %>  
    </small>
  </div>
  
  

</section>  


<section class="mt-0 pt-0">
  <%= render 'shared/stats' %>
</section>
<%= render 'shared/post_button' if current_user?(@user)%>
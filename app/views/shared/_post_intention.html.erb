<% case intention %>
<% when "winning" then %>
  <i class="fas fa-chess-queen c-purple"></i>

<% when "victory" then %>
  <i class="fas fa-crown c-goldenrod"></i>
  
<% when "battle" then%> 
  <i class="fas fa-fist-raised c-brown"></i>
  
<% when "fan" then%> 
  <i class="fas fa-seedling c-forestgreen"></i>
  
<% end %>

 
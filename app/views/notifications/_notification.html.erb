
<% if notification.checked %>
  <li class="notification">
    <div class="row">
      
      <div class="col-1">
        <% if notification.action == "comment" %>
          <i class="fas fa-comment text-secondary"></i>
        <% elsif notification.action == "like" %>
          <i class="fas fa-thumbs-up text-primary"></i>
        <% elsif notification.action == "bookmark" %>
          <i class="fas fa-star c-bookmark"></i>
        <% elsif notification.action == "follow" %>
          <i class="fas fa-user-friends text-info"></i>
          
        <% end %>
      </div>
      <div class="position-relative col-11">
        <small>
          <%= notification_form(notification) %>
          <br>
        </small>
        <% if !@comment.nil? %>
          <div class="ml-3">
            <small class="text-secondary"><%= simple_format(@comment.content) %></small>  
          </div>
        <% end %>
        <small><%= " #{time_ago_in_words(notification.created_at)}前" %></small>
      </div>
    </div>
  </li>

<% else %>
  <% notification.update_attributes(checked: true) %>
  <li class="notification bg-ghostwhite">
    <div class="position-relative">
      <small>
        <%= notification_form(notification) %>
        <span class=""><%= " #{time_ago_in_words(notification.created_at)}前" %></span>
      </small>
      <% if !@comment.nil? %>
        <div class="ml-3">
          <small class="text-secondary"><%= simple_format(@comment.content) %></small>  
        </div>
      <% end %>
    </div>
  </li>
<% end %>

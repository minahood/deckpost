


<div class="row">
  <%= render 'shared/user_form' %>
  
  <div class="col-md-8 col-lg-6">
    <%= render 'shared/user_nav' %>
    
    <% if @users.any? %>
      <ul class="index mt-up-1">
        <%= render @users %>
      </ul>
      <div class="page_nav">
        <%= paginate @users, window: 2 %>
      </div>
    <% else %>
      <div class="border-top mt-up-1">
        <p>各当するユーザーは存在しません</p>  
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  <% if @title == "フォロー中" %> 
    $("#user_nav-link-following").addClass("active");
  <% end %>
  <% if @title == "フォロワー" %> 
    $("#user_nav-link-followers").addClass("active");
  <% end %>
</script>

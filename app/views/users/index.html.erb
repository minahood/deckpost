

<div class ="row">
  <div class="col col-md-3">
  </div>
  
  <div class="col-md-6 p-0 y-border-md">
    <div class="search_form mx-3 m-md-0">
      <p>検索条件</p>
      <%= form_with(url: users_path, method: :get, local: true) do |f| %>
      
        <%= f.label :word ,"ユーザー名" %>
        <%= f.text_field :word, placeholder: "ユーザー名を入力...",class: "mini-select",value: @word %>
        <br>
        <%= f.label :login_id ,"ユーザーID" %>
        <%= f.text_field :login_id, placeholder: "ユーザーIDを入力...",class: "mini-select",value: @login_id%>
        <br>
        <%= f.label :favorite ,"お気に入りTCG" %>
        <%= f.select :favorite, deck_kind , {selected: @favorite}, {class: 'kind_select'} %>
        <br>
        <%= f.submit "検索", class: "mb-2 ml-13" %>
        
        <%= button_tag type: 'submit', class: "d-none" do %>
          <i class="fas fa-search"></i><span class= "d-none d-md-inline">検索</span>
        <% end %>
        <br style="clear:both;"/>
        
      <% end %>
    </div>

    <ul class="index">
      <%= render @users %>
    </ul>
    <div class="page_nav">
      <%= paginate @users, window: 2 %>
    </div>
  </div>
</div>

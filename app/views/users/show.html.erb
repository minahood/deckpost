<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-6 offset-md-3">
    <section class="user_info">
      <%= link_to "ユーザー設定", edit_user_path(@user),class: "btn btn-sm btn-outline-primary float-right" if current_user?(@user)%>
      <h1>
        
        <%= @user.name %>
      </h1>
      
      <%= simple_format(@user.introduction) if @user.introduction==nil %>  
      
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if logged_in? %>
    
    
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </aside>
  <div class="">
    

  </div>
</div>
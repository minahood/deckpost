<% provide(:title, @user.name) %>


<div class="row">
  <%= render "shared/post_form" if logged_in? %>
  <aside class="col-md-4 col-lg-3 right-border-md">
    <% if logged_in? %>
      <% if current_user.admin? && !current_user?(@user) %>
        <%= link_to "delete", @user, class: "user_dust",method: :delete,
                                data: { confirm: "You sure?" } %>
      <% end %>
    <% end %>
    <%= render 'shared/user_info' %>
  </aside>
  
  <div class="col-md-8 col-lg-6">
    <%= render 'shared/user_nav' %>
    
    <%= render 'users/post_index' , microposts: @microposts %>
  </div>
</div>

<script type="text/javascript">
  
  $(document).ready(function() {

    $(".form_bg").click(function(){
      $(".form_bg").addClass("d-none");
      $(".post_form").addClass("d-none");
    })
    
    $("#user_nav-link-posts").addClass("active");
    
  });
  
</script>
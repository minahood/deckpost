<% provide(:title, @user.name) %>


<div class="row">
  <%= render "shared/post_form" if logged_in?%>
  <aside class="col-md-4 col-lg-3 right-border-md">
    <%= render 'shared/user_info' %>
  </aside>
  
  <div class=" col-md-6 col-lg-6">
    <%= render 'shared/user_nav' %>
    
    <%= render 'users/post_index' , microposts: @microposts %>
  </div>
</div>

<script type="text/javascript">
  $("#user_nav-link-bookmarks").addClass("active");
</script>

<li class="user_index">

  <div class="p-1 index_each_user_box position-relative">
    <%= link_to user.name, user,class:"user_link stretched-link font-weight-bold" %>
    <% unless current_user?(user) %>
      
      <%= render 'follow_button_index',{user: user} %>
      
    <% end %>
    <% if current_user.admin? && !current_user?(user) %>
      
      <%= link_to "delete", user, method: :delete,
                                data: { confirm: "You sure?" } %>
    <% end %>
    <div class="text-secondary"><%= user.login_id%></div>
    <div class="font-weight-light user_intro"><%= user.introduction%></div>
    

  </div>
  
</li>
<div class ="row">
  <div class="col col-md-3">
    <div class="d-none d-md-block">
      <%= render 'advertisement/search_left' %>
    </div>
  </div>
  
  <div class="col-md-6 p-0 y-border-md">
    <div class="" >
      <div class="px-3 p-md-0"> 
        <%= render 'shared/deck_search' %>
      </div>
      
      <div> 
        <% if @microposts.any? %>
          <ul class="index">
            <%= render @microposts %>
          </ul>
          <div class="page_nav">
            <%= paginate @microposts, window: 2 %>
          </div>  
        <% else %> 
          <div class="p-3">各当する投稿は見つかりません。</div>
        <% end %>
      </div>
      
    </div>
  </div>
  <div class="col col-md-3">
    <%= render 'advertisement/ad_right' %> 
  </div>
</div>

<%= render 'advertisement/amazon_tcg' %>

<%= form_with(url: microposts_search_path, method: :get, local: true) do |f| %>
  <%= render 'shared/deck_kind' , f: f%>
  <%= f.text_field :search_word, placeholder: "デッキ名を入力..." %>
  <%= f.submit "検索", class: "my-3" %>

  <%= button_tag type: 'submit', class: "" do %>
    <i class="fas fa-search"></i><span class= "d-none d-md-inline">検索</span>
  <% end %>

  
<% end %>

<% if @microposts.any? %>
  
  <ul class="index">
    <%= render @microposts %>
  </ul>
  <div class="page_nav">
    <%= paginate @microposts, window: 2 %>
  </div>
  
<% end %>
<% provide(:title, "ログイン") %>
<div id="subtitle" ,class="col-md-6 offset-md-3">ログイン</div>

<div class="row">
  <div class="col-md-6 offset-md-3 text-secondary form">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :login_id ,"ユーザーID"%>
      <%= f.text_field :login_id,class: "bg-light form-control"  %>

      <%= f.label :password,"パスワード" %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>次回から自動でログイン</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <h6>新規登録は <%= link_to "こちら", signup_path %></h6>
  </div>
</div>
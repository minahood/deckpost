<% provide(:title, "ログイン") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 offset-md-3 form">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <%= f.label :login_id ,"ログインID"%>
      <%= f.text_field :login_id,class: "bg-light form-control"  %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <p>新規登録は <%= link_to "こちら", signup_path %></p>
  </div>
</div>
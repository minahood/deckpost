<nav class="navbar navbar-expand flex-wrap navbar-dark bg-dark flex-column flex-md-row">
  <%= link_to "デッキポスト",root_path , class: "navbar-brand mr-1 mr-sm-4",id: "logo" %>


  <div class="navbar-collapse flex-sm-row flex-column" id="Navber">
    <ul class="navbar-nav mr-auto head-menu flex-row">
      <li class="nav-item mr-1">
        <%= link_to((root_path),class: "nav-link") do %>
          <i class="far fa-edit"></i><span class= "">投稿</span>
        <% end %>
      </li>
      <% if logged_in? %>
        <li class="nav-item mr-1">
          <%= link_to(user_path(current_user),class: "nav-link") do %>
            <i class="fas fa-user mr-1"></i><span class= "" >マイページ</span>
          <% end %>
        </li>
        <li class="nav-item dropdown mr-1">
          <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-cog mr-1"></i><span class= "" >設定</span>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">プロフィール</a>
            <%= link_to(users_path,class: "dropdown-item") do %>
              ユーザーを探す
            <% end %>
            <%= link_to(edit_user_path(current_user) ,class: "dropdown-item") do %>
              <i class="fas fa-user-edit mr-1"></i>ユーザー情報を編集
            <% end %>
            <%= link_to(edit_pass_user_path(current_user),class: "dropdown-item") do %>
              パスワード変更
            <% end %>
            
            <div class="dropdown-divider"></div>
            <%= link_to "ログアウト", logout_path,class: "dropdown-item", method: :delete %>
          </div>
        </li>

      <% end %>
      <% if !logged_in? %>
        <li class="nav-item mr-1">
          <%= link_to(login_path,class: "nav-link") do %>
            <i class="fas fa-user-plus mr-1"></i><span class= "" >ログイン/新規登録</span>
          <% end %>
        </li>
      <% end %>
    </ul>
    
    <%= form_with url: microposts_search_url, method: :get, local: true ,class: "form-inline my-2 my-md-0" do |f| %>

      <%= f.text_field :search,class: "form-control mr-2 head-search", placeholder: "デッキ検索..." %>
      <%# f.submit "検索", class: "" %>
      <%= button_tag type: 'submit', class: "btn btn-outline-success my-2" do %>
        <i class="fas fa-search"></i><span class= "d-none d-md-inline">検索</span>
      <% end %>
    <% end %>

  </div><!-- /.navbar-collapse -->

</nav>

